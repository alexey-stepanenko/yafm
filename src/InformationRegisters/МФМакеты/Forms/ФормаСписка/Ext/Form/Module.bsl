#Область ОбработчикиКомандФормы

&НаКлиенте
Процедура ОбновитьМакет(Команда)
	МакетыКОбновлению = Новый Массив;
	Для Каждого ВыделеннаяСтрока Из Элементы.Список.ВыделенныеСтроки Цикл
		ДанныеСтроки = Элементы.Список.ДанныеСтроки(ВыделеннаяСтрока);
		Если Не ДанныеСтроки.МакетСовпадает Тогда
			МакетыКОбновлению.Добавить(Новый Структура(
				"ИмяФормы, ИмяМакета",
				ДанныеСтроки.ИмяФормы,
				ДанныеСтроки.ИмяМакета
			));
		КонецЕсли;
	КонецЦикла;
	
	Если МакетыКОбновлению.Количество() = 0 Тогда
		ПоказатьПредупреждение(
			,
			НСтр("ru='Отсутствуют отличающиеся макеты'"),
			,
			НСтр("ru='Ошибка'")
		);
		Возврат;
	КонецЕсли;
	ДополнительныеПараметры = Новый Структура;
	ДополнительныеПараметры.Вставить("МакетыКОбновлению", МакетыКОбновлению);
	Оповещение = Новый ОписаниеОповещения(
		"ПослеПоказаВопросаОбОбновленииМакета",
		ЭтаФорма,
		ДополнительныеПараметры
	);
	ПоказатьВопрос(
		Оповещение,
		НСтр("ru='Выбранные макеты будут обновлены данными из конфигурации. Продолжить?'"),
		РежимДиалогаВопрос.ДаНет,
		30,
		КодВозвратаДиалога.Нет,
		НСтр("ru='Обновление макетов'"),
		КодВозвратаДиалога.Нет
	);
КонецПроцедуры

