    Результат.Добавить(Идентификаторы.БлокРазработки());
    Результат.Добавить(Идентификаторы.БлокТестирования());
    Результат.Добавить(Идентификаторы.УдалитьИзРелиза());

    Возврат Результат;
КонецФункции

